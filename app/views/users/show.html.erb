<section class="user">
  <h1><%= @user.name %></h1>
  <h2><%= mail_to(@user.email) %></h2>

  <% if current_user?(@user) %>
    <div class="actions">
      <%= link_to "Edit", edit_user_path(@user), class: "button edit" %></p>
      <%= link_to "Delete", user_path(@user),
                             data: { turbo_method: :delete,
                                     turbo_confirm: "Are you sure?" },
                             class: "button delete" %></p>
    </div>
  <% end %>
</section>
