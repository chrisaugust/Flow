<section class="category">
  <h1><%= @category.name %></h1>
  <% if current_user_admin? %>
    <div class="admin">
      <p><%= link_to "Edit Category", edit_category_path(@category) %></p>
    </div>
  <% end %>
  <p><%= @category.description %></p>
  <hr>
  <h2>Expenses</h2>
      <p><%= link_to "Add New Expense", new_category_expense_path(@category), class: "add-expense" %></p>
  <ul>
    <% @expenses.each do |e| %>
      <li>
        <%= e.date %> &bull; 
        <%= number_to_currency(e.amount) %> &bull;
        <%= link_to "Show Details", category_expense_path(@category, e) %>
      </li>
    <% end %>
  </ul>  

<p><strong>Total: <%= number_to_currency(@total_spending) %></strong></p>
</section>

<section>
<%= column_chart @chart_data %>
</section>
